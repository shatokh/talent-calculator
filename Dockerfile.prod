# Dockerfile.prod
# Stage 1: build
FROM node:22-alpine AS build
WORKDIR /app
# 1. Кэшируем зависимости
COPY package*.json ./
RUN npm ci
# 2. Копируем исходники и собираем статику
COPY . .
RUN npm run build
# Stage 2: serve
FROM nginx:alpine
# 3. Копируем собранные файлы в папку nginx
COPY --from=build /app/dist /usr/share/nginx/html
# 4. Открываем порт 80
EXPOSE 80
# 5. Запускаем nginx в форграунд-режиме
CMD ["nginx", "-g", "daemon off;"]
