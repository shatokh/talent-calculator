{
  "version": 2,

  "builds": [
    {
      "src": "svelte.config.js",
      "use": "@sveltejs/adapter-vercel"
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "X-Robots-Tag",   "value": "index, follow" }
      ]
    }
  ],

  "env": {
    "NODE_ENV": "production"
  },

  "github": {

    "productionBranch": "master"
  }
}